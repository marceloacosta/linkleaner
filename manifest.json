{
  "manifest_version": 3,
  "name": "LinkExploder - AI-Powered Hunter",
  "version": "3.0",
  "description": "AI-powered LinkedIn post detection using GPT-3.5-turbo to identify and explode hype, cringe, and motivational posts with spectacular visual effects",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["explosion.mp3"],
    "matches": ["https://*.linkedin.com/*"]
  }]
}
