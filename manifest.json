{
  "manifest_version": 3,
  "name": "LinkedIn Profile Blocker",
  "version": "1.0",
  "description": "Block and fade out LinkedIn profiles from your feed",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["explosion.mp3"],
    "matches": ["https://*.linkedin.com/*"]
  }]
}
