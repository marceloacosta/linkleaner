{
  "manifest_version": 3,
  "name": "LinkeBlock",
  "version": "3.3",
  "description": "AI-powered LinkedIn post analyzer that generates brutally honest summaries",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "worker.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["explosion.mp3"],
    "matches": ["https://*.linkedin.com/*"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkeBlock - AI Post Analyzer"
  }
}
