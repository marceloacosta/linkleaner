{
  "manifest_version": 3,
  "name": "LinkExploder - Game Changer Hunter",
  "version": "2.0",
  "description": "Automatically finds and explodes LinkedIn posts containing 'changed the game' with spectacular visual effects",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["explosion.mp3"],
    "matches": ["https://*.linkedin.com/*"]
  }]
}
